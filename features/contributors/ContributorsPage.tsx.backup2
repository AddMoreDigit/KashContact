import { useState } from 'react';
import { Button } from '../../components/ui/button';
import { Input } from '../../components/ui/input';
import { Search, Filter, Users, Target, Wallet, X, Edit2, Star } from 'lucide-react';
import { toast } from 'sonner';
import { RemoveContributorDialog } from './components/RemoveContributorDialog';
import { ReplaceContributorDialog } from './components/ReplaceContributorDialog';
import { RefundContributorDialog } from './components/RefundContributorDialog';
import { NavBar } from '../../components/layout';
import imgEllipse34 from 'figma/asset/e44d5cd688ebcf29969455cdd422abc0ede80023.png';

