type Page = 'dashboard' | 'campaigns' | 'vouchers' | 'transactions' | 'profile' | 'overview' | 'draft' | 'howItWorks' | 'campaignDetail' | 'viewCampaign' | 'messaging' | 'serviceDetail' | 'selectedServices' | 'createCampaign' | 'manageCampaign' | 'contributors' | 'contributorDetail' | 'campaignSchedule' | 'campaignsHistory' | 'contribute' | 'viewCampaignDetail';

interface Member {
  email: string;
  name?: string;
  avatar?: string;
  contributionPercentage?: number;
  status?: 'up-to-date' | 'pending';
  contributedAmount?: number;
}

interface Campaign {
  id: number;
  title: string;
  image: string;
  provider: string;
  date: string;
  services: { name: string; type: string }[];
  members: Member[];
  memberPerformance?: Member[];
  goal: number;
  contributed: number;
  status: 'contribute' | 'manage';
  category?: string;
  startDate: string;
  endDate: string;
  contributionFrequency?: string;
  cartItems?: any[];
}

interface ViewCampaignDetailPageProps {
  onNavigate: (page: Page) => void;
  campaign?: Campaign | null;
  onUpdateCampaign?: (campaign: Campaign) => void;
}

export function ViewCampaignDetailPage({ onNavigate, campaign, onUpdateCampaign }: ViewCampaignDetailPageProps) {
  const [inviteEmail, setInviteEmail] = useState('');
  const [isPaused, setIsPaused] = useState(false);
  const [editMemberDialog, setEditMemberDialog] = useState(false);
  const [selectedMemberEmail, setSelectedMemberEmail] = useState('');
  const [newContributionPercentage, setNewContributionPercentage] = useState('');
  const [editServicesDialog, setEditServicesDialog] = useState(false);
  const [newServiceName, setNewServiceName] = useState('');
  const [newServiceType, setNewServiceType] = useState('');
  const [editingMemberTargetAmount, setEditingMemberTargetAmount] = useState('');
  const [useCustomTargets, setUseCustomTargets] = useState(false);
  const [searchServiceQuery, setSearchServiceQuery] = useState('');
  const [selectedTab, setSelectedTab] = useState<'browse' | 'current'>('current');

  // Default campaign data if none provided
  const defaultCampaign: Campaign = {
    id: 1,
    title: 'Cape Town Gateway Weekend',
    image: imgRectangle115,
    provider: 'Seaview Lodge',
    date: 'Sep 1 â†’ Dec 5, 2025',
    startDate: '2025-09-01',
    endDate: '2025-12-05',
    services: [
      { name: 'Seaview Lodge', type: 'Accommodation' },
      { name: 'TasteBites Catering', type: 'Food' },
    ],
    members: [
      { email: 'alice@example.com', contributionPercentage: 75, status: 'up-to-date' },
      { email: 'john@example.com', contributionPercentage: 100, status: 'up-to-date' },
      { email: 'jabulani@example.com', contributionPercentage: 0, status: 'pending' },
    ],
    goal: 10000,
    contributed: 3000,
    status: 'manage',
  };

  const activeCampaign = campaign || defaultCampaign;
  const progressPercentage = Math.round((activeCampaign.contributed / activeCampaign.goal) * 100);

  const handleInvite = () => {
    if (!inviteEmail.trim()) {
      toast.error('Please enter an email address');
      return;
    }

    if (!/^[^\s@]+@[^\s@]+\.[^\s@]+$/.test(inviteEmail)) {
      toast.error('Please enter a valid email address');
      return;
    }

    // Add new member to campaign
    const updatedCampaign = {
      ...activeCampaign,
      members: [
        ...activeCampaign.members,
        { email: inviteEmail, contributionPercentage: 0, status: 'pending' as const }
      ]
    };

    onUpdateCampaign?.(updatedCampaign);
    toast.success(`Invitation sent to ${inviteEmail}`);
    setInviteEmail('');
  };

  const handleEditMember = (memberEmail: string) => {
    const member = activeCampaign.members.find(m => m.email === memberEmail);
    setSelectedMemberEmail(memberEmail);
    setNewContributionPercentage(member?.contributionPercentage?.toString() || '0');
    setEditMemberDialog(true);
  };

  const handleSaveEditMember = () => {
    const percentage = parseInt(newContributionPercentage);
    if (isNaN(percentage) || percentage < 0 || percentage > 100) {
      toast.error('Please enter a valid percentage between 0 and 100');
      return;
    }

    const updatedCampaign = {
      ...activeCampaign,
      members: activeCampaign.members.map(m =>
        m.email === selectedMemberEmail
          ? { ...m, contributionPercentage: percentage }
          : m
      )
    };

    onUpdateCampaign?.(updatedCampaign);
    setEditMemberDialog(false);
    toast.success('Member contribution updated');
  };

  const handleRemoveMember = (memberEmail: string) => {
    const updatedCampaign = {
      ...activeCampaign,
      members: activeCampaign.members.filter(m => m.email !== memberEmail)
    };

    onUpdateCampaign?.(updatedCampaign);
    toast.success('Member removed from campaign');
  };

  const handlePauseCampaign = () => {
    setIsPaused(!isPaused);
    if (!isPaused) {
      toast.success('Campaign paused');
    } else {
      toast.success('Campaign resumed');
    }
  };

  const handleCampaignPerformance = () => {
    onNavigate('contributors');
  };

  const handleEditServiceProviders = () => {
    setEditServicesDialog(true);
  };

  const handleRemoveService = (index: number) => {
    if (activeCampaign.services.length <= 1) {
      toast.error('Campaign must have at least one service provider');
      return;
    }

    const updatedCampaign = {
      ...activeCampaign,
      services: activeCampaign.services.filter((_, i) => i !== index)
    };

    onUpdateCampaign?.(updatedCampaign);
    toast.success('Service provider removed');
  };

  const handleAddService = () => {
    if (!newServiceName.trim()) {
      toast.error('Please enter a service name');
      return;
    }

    if (!newServiceType.trim()) {
      toast.error('Please enter a service type');
      return;
    }

    const updatedCampaign = {
      ...activeCampaign,
      services: [
        ...activeCampaign.services,
        { name: newServiceName, type: newServiceType }
      ]
    };

    onUpdateCampaign?.(updatedCampaign);
    setNewServiceName('');
    setNewServiceType('');
    toast.success('Service provider added');
  };

  const handleAddServiceFromList = (provider: { name: string; category: string; }) => {
    // Check if already added
    const isAlreadyAdded = activeCampaign.services.some(s => s.name === provider.name);
    if (isAlreadyAdded) {
      toast.error('This service provider is already added');
      return;
    }

    // Find the full provider data to get the price
    const allServices = serviceStorage.getAllServiceProviders();
    const fullProvider = allServices.find(p => p.name === provider.name);
    const servicePrice = parseInt(fullProvider?.priceRate || '0') || 0;
    const newGoal = activeCampaign.goal + servicePrice;

    const updatedCampaign = {
      ...activeCampaign,
      services: [
        ...activeCampaign.services,
        { name: provider.name, type: provider.category }
      ],
      goal: newGoal
    };

    onUpdateCampaign?.(updatedCampaign);
    toast.success(`${provider.name} added - Campaign goal updated to R${newGoal.toLocaleString()}`);
  };

  const isServiceAdded = (providerName: string) => {
    return activeCampaign.services.some(s => s.name === providerName);
  };

  // Filter service providers based on search
  const allServices = serviceStorage.getAllServiceProviders();
  const filteredProviders = allServices.filter(provider =>
    provider.name.toLowerCase().includes(searchServiceQuery.toLowerCase()) ||
    provider.category.toLowerCase().includes(searchServiceQuery.toLowerCase()) ||
    provider.location.toLowerCase().includes(searchServiceQuery.toLowerCase())
  );

  const renderStars = (rating: number) => {
    return (
      <div className="flex gap-0.5">
        {[...Array(5)].map((_, index) => (
          <svg
            key={index}
            className={`w-4 h-4 ${index < rating ? 'fill-yellow-400' : 'fill-gray-300'}`}
            viewBox="0 0 20 20"
          >
            <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
          </svg>
        ))}
      </div>
    );
  };

  const formatDate = (dateString: string) => {
    return new Date(dateString).toLocaleDateString('en-US', {
      month: 'short',
      day: 'numeric',
      year: 'numeric',
    });
  };

  const getMemberInitials = (email: string) => {
    return email.charAt(0).toUpperCase();
  };

  const getMemberName = (email: string) => {
    return email.split('@')[0].charAt(0).toUpperCase() + email.split('@')[0].slice(1);
  };

  return (
    <div className="flex-1 bg-white">
      {/* Hero Image */}
      <div className="w-full h-[200px] relative">
        <img
          src={activeCampaign.image}
          alt="Campaign"
          className="w-full h-full object-cover"
        />
      </div>

      <div className="px-8 py-6 max-w-5xl mx-auto">
        {/* Service Providers Section */}
        <div className="mb-8">
          <div className="flex items-center justify-between mb-4">
            <h2 className="text-gray-900 text-2xl">Service Provider</h2>
            <Button
              variant="ghost"
              onClick={handleEditServiceProviders}
              className="text-purple-600 hover:text-purple-700 hover:bg-purple-50"
            >
              <EditIcon className="w-5 h-5 mr-2" />
              Edit
            </Button>
          </div>

          <div className="space-y-4">
            {activeCampaign.services.map((service, index) => (
              <div key={index} className="flex items-center gap-4">
                <div className="w-12 h-12 rounded-lg bg-gray-200 flex items-center justify-center">
                  <span className="text-gray-600">{service.name.charAt(0)}</span>
                </div>
                <div className="flex-1">
                  <div className="flex items-center gap-2 mb-1">
                    <h3 className="text-gray-900">{service.name}</h3>
                    {renderStars(3)}
                    <span className="text-gray-500 text-sm">(24 Reviews)</span>
                  </div>
                  <p className="text-gray-600 text-sm">
                    Cape Town | {service.type}
                  </p>
                </div>
              </div>
            ))}
          </div>
        </div>

        {/* Campaign Goal Section */}
        <div className="mb-8">
          <h2 className="text-gray-900 text-2xl mb-4">Campaign Goal</h2>
          
          <div className="flex items-center justify-between mb-2">
            <div className="flex items-center gap-2">
              <svg className="w-5 h-5 text-purple-600" fill="currentColor" viewBox="0 0 20 20">
                <path fillRule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z" clipRule="evenodd" />
              </svg>
              <span className="text-gray-900">Goal -R{activeCampaign.goal.toLocaleString()}.00</span>
            </div>
            <span className="text-gray-900">Contributed -R{activeCampaign.contributed.toLocaleString()}.00</span>
          </div>

          {/* Progress Bar */}
          <div className="relative mb-2">
            <div className="w-full h-4 bg-gray-300 rounded-lg overflow-hidden">
              <div 
                className="h-full bg-purple-600 rounded-lg transition-all"
                style={{ width: `${progressPercentage}%` }}
              />
            </div>
          </div>
          
          <div className="flex justify-end mb-4">
            <span className="text-gray-900">{progressPercentage}%</span>
          </div>

          {/* Date Range */}
          <div className="flex items-center gap-2 text-gray-900">
            <Calendar className="w-5 h-5" />
            <span>
              {formatDate(activeCampaign.startDate)} â†’ {formatDate(activeCampaign.endDate)}
            </span>
          </div>
        </div>

        {/* Members Section */}
        <div className="mb-8">
          <div className="flex items-center justify-between mb-6">
            <h2 className="text-gray-900 text-2xl">Members</h2>
            <Button
              onClick={handleCampaignPerformance}
              className="bg-purple-600 hover:bg-purple-700 text-white"
            >
              Campaign performance
            </Button>
          </div>

          {/* Target Amount Summary */}
          <div className="bg-purple-50 border border-purple-200 rounded-lg p-4 mb-4">
            <div className="flex items-center justify-between">
              <div>
                <p className="text-gray-700 text-sm">Total Campaign Goal</p>
                <p className="text-gray-900 text-lg">R{activeCampaign.goal.toLocaleString(undefined, {maximumFractionDigits: 2})}</p>
              </div>
              <div>
                <p className="text-gray-700 text-sm">Members</p>
                <p className="text-gray-900 text-lg">{activeCampaign.members.length}</p>
              </div>
              <div>
                <p className="text-gray-700 text-sm">Target per Member</p>
                <p className="text-gray-900 text-lg">R{(activeCampaign.goal / activeCampaign.members.length).toLocaleString(undefined, {maximumFractionDigits: 2})}</p>
              </div>
              <div>
                <p className="text-gray-700 text-sm">Total Member Targets</p>
                <p className="text-purple-600 text-lg">R{((activeCampaign.goal / activeCampaign.members.length) * activeCampaign.members.length).toLocaleString(undefined, {maximumFractionDigits: 2})}</p>
              </div>
            </div>
          </div>

          <div className="space-y-4">
            {(activeCampaign.memberPerformance || activeCampaign.members).map((member, index) => {
              const memberGoalShare = activeCampaign.goal / (activeCampaign.memberPerformance || activeCampaign.members).length;
              const memberContributed = member.contributedAmount || 0;
              
              return (
              <div key={index} className="flex items-center gap-4">
                <Avatar className="w-12 h-12">
                  {member.avatar ? (
                    <img src={member.avatar} alt={member.name || getMemberName(member.email)} className="w-full h-full object-cover" />
                  ) : (
                    <AvatarFallback className="bg-purple-500 text-white">
                      {getMemberInitials(member.email)}
                    </AvatarFallback>
                  )}
                </Avatar>
                <div className="flex-1">
                  <div className="flex items-center justify-between mb-1">
                    <div>
                      <p className="text-gray-900">{member.name || getMemberName(member.email)}</p>
                      <p className="text-gray-500 text-sm">
                        {member.status === 'up-to-date' ? 'Up to date' : 'Pending'} â€¢ Target: R{memberGoalShare.toLocaleString(undefined, {maximumFractionDigits: 2})} â€¢ Contributed: R{memberContributed.toLocaleString(undefined, {maximumFractionDigits: 2})}
                      </p>
                    </div>
                    <div className="flex items-center gap-3">
                      <span className="text-gray-900">{member.contributionPercentage || 0}%</span>
                      <Button
                        variant="ghost"
                        size="sm"
                        onClick={() => handleEditMember(member.email)}
                        className="text-purple-600 hover:text-purple-700 hover:bg-purple-50"
                      >
                        Edit
                      </Button>
                    </div>
                  </div>
                  <div className="w-full h-3 bg-gray-300 rounded-full overflow-hidden">
                    <div 
                      className={`h-full rounded-full transition-all ${
                        (member.contributionPercentage || 0) === 100 ? 'bg-purple-600' : 'bg-purple-500'
                      }`}
                      style={{ width: `${member.contributionPercentage || 0}%` }}
                    />
                  </div>
                </div>
              </div>
              );
            })}
          </div>
        </div>

        {/* Invite Members Section */}
        <div className="mb-8">
          <h2 className="text-gray-900 text-2xl mb-4">Invites Members</h2>
          <div className="flex gap-3">
            <div className="flex-1 relative">
              <Input
                type="email"
                placeholder="Search by Username or email"
                value={inviteEmail}
                onChange={(e) => setInviteEmail(e.target.value)}
                onKeyPress={(e) => {
                  if (e.key === 'Enter') {
                    handleInvite();
                  }
                }}
                className="w-full"
              />
              <Button
                variant="ghost"
                size="icon"
                className="absolute right-2 top-1/2 -translate-y-1/2"
                onClick={() => toast.info('Add multiple invites')}
              >
                <Plus className="h-5 w-5 text-gray-500" />
              </Button>
            </div>
            <Button
              onClick={handleInvite}
              className="bg-purple-600 hover:bg-purple-700 text-white px-8"
            >
              Invite
            </Button>
          </div>
        </div>

        {/* Action Buttons */}
        <div className="flex justify-between pt-6 border-t border-gray-200">
          <Button
            variant="outline"
            onClick={() => onNavigate('campaigns')}
            className="border-gray-300 px-8"
          >
            Back
          </Button>
          <div className="flex gap-3">
            <Button
              onClick={() => onNavigate('contribute')}
              className="bg-green-600 hover:bg-green-700 text-white px-8"
            >
              Contribute
            </Button>
            <Button
              onClick={handlePauseCampaign}
              className={`${
                isPaused 
                  ? 'bg-green-600 hover:bg-green-700' 
                  : 'bg-purple-600 hover:bg-purple-700'
              } text-white px-8`}
            >
              {isPaused ? 'Resume Campaign' : 'Pause Campaign'}
            </Button>
          </div>
        </div>
      </div>

      {/* Edit Member Dialog */}
      <Dialog open={editMemberDialog} onOpenChange={setEditMemberDialog}>
        <DialogContent>
          <DialogHeader>
            <DialogTitle>Edit Member Contribution</DialogTitle>
            <DialogDescription>
              Update the contribution percentage for the selected member.
            </DialogDescription>
          </DialogHeader>
          <div className="space-y-4 py-4">
            <div>
              <Label>Member Email</Label>
              <Input value={selectedMemberEmail} disabled className="bg-gray-50" />
            </div>
            <div>
              <Label htmlFor="contribution">Contribution Percentage</Label>
              <Input
                id="contribution"
                type="number"
                min="0"
                max="100"
                value={newContributionPercentage}
                onChange={(e) => setNewContributionPercentage(e.target.value)}
                placeholder="0-100"
              />
            </div>
            <Button
              variant="destructive"
              onClick={() => {
                handleRemoveMember(selectedMemberEmail);
                setEditMemberDialog(false);
              }}
              className="w-full"
            >
              Remove Member
            </Button>
          </div>
          <DialogFooter>
            <Button variant="outline" onClick={() => setEditMemberDialog(false)}>
              Cancel
            </Button>
            <Button onClick={handleSaveEditMember} className="bg-purple-600 hover:bg-purple-700">
              Save Changes
            </Button>
          </DialogFooter>
        </DialogContent>
      </Dialog>

      {/* Edit Services Dialog */}
      <Dialog open={editServicesDialog} onOpenChange={setEditServicesDialog}>
        <DialogContent className="max-w-4xl max-h-[90vh] flex flex-col">
          <DialogHeader>
            <DialogTitle>Edit Service Providers</DialogTitle>
            <DialogDescription>
              Add or remove service providers from your campaign.
            </DialogDescription>
          </DialogHeader>
          <div className="flex-1 overflow-y-auto py-3 space-y-3">
            {/* Current Services */}
            <div>
              <Label className="text-sm mb-1.5 block">Current Service Providers</Label>
              <div className="space-y-1.5">
                {activeCampaign.services.length === 0 ? (
                  <p className="text-gray-500 text-xs">No service providers added yet.</p>
                ) : (
                  activeCampaign.services.map((service, index) => (
                    <div key={index} className="flex items-center justify-between p-2 border border-gray-200 rounded-lg hover:border-purple-300 transition-colors">
                      <div className="flex items-center gap-2">
                        <div className="w-8 h-8 rounded-lg bg-purple-100 flex items-center justify-center">
                          <span className="text-purple-600 text-sm">{service.name.charAt(0)}</span>
                        </div>
                        <div>
                          <p className="text-gray-900 text-sm">{service.name}</p>
                          <p className="text-xs text-gray-500">{service.type}</p>
                        </div>
                      </div>
                      <Button 
                        variant="ghost" 
                        size="sm" 
                        onClick={() => handleRemoveService(index)}
                        className="text-red-600 hover:text-red-700 hover:bg-red-50 h-7 w-7 p-0"
                      >
                        <X className="w-3.5 h-3.5" />
                      </Button>
                    </div>
                  ))
                )}
              </div>
            </div>

            {/* Browse Service Providers */}
            <div className="border-t pt-3">
              <Label className="text-sm mb-1.5 block">Browse & Add Service Providers</Label>
              <div className="space-y-2">
                <Input
                  type="text"
                  placeholder="Search by name, category, or location..."
                  value={searchServiceQuery}
                  onChange={(e) => setSearchServiceQuery(e.target.value)}
                  className="h-9 text-sm"
                />
                <div className="grid grid-cols-2 gap-2 max-h-[300px] overflow-y-auto pr-1">
                  {filteredProviders.map(provider => (
                    <div 
                      key={provider.name} 
                      className={`flex items-center justify-between p-2 border rounded-lg transition-colors ${
                        isServiceAdded(provider.name) 
                          ? 'border-green-300 bg-green-50' 
                          : 'border-gray-200 hover:border-purple-300'
                      }`}
                    >
                      <div className="flex items-center gap-2 flex-1 min-w-0">
                        <div className="w-8 h-8 rounded-lg bg-purple-100 flex items-center justify-center flex-shrink-0">
                          <span className="text-purple-600 text-sm">{provider.name.charAt(0)}</span>
                        </div>
                        <div className="min-w-0 flex-1">
                          <p className="text-gray-900 text-sm truncate">{provider.name}</p>
                          <p className="text-xs text-gray-500 truncate">{provider.category} â€¢ R{provider.price.toLocaleString()}</p>
                        </div>
                      </div>
                      <Button 
                        variant="ghost" 
                        size="sm" 
                        onClick={() => handleAddServiceFromList(provider)}
                        disabled={isServiceAdded(provider.name)}
                        className={`ml-2 h-7 w-7 p-0 flex-shrink-0 ${
                          isServiceAdded(provider.name)
                            ? 'text-green-600 bg-green-100 cursor-not-allowed'
                            : 'text-purple-600 hover:text-purple-700 hover:bg-purple-50'
                        }`}
                      >
                        {isServiceAdded(provider.name) ? (
                          <svg className="w-3.5 h-3.5" fill="currentColor" viewBox="0 0 20 20">
                            <path fillRule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clipRule="evenodd" />
                          </svg>
                        ) : (
                          <Plus className="w-3.5 h-3.5" />
                        )}
                      </Button>
                    </div>
                  ))}
                </div>
              </div>
            </div>

            {/* Manual Entry */}
            <div className="border-t pt-3">
              <Label className="text-sm mb-1.5 block">Or Add Custom Service</Label>
              <div className="space-y-2">
                <Input
                  type="text"
                  placeholder="Service name (e.g., Seaview Lodge)"
                  value={newServiceName}
                  onChange={(e) => setNewServiceName(e.target.value)}
                  className="h-9 text-sm"
                />
                <Input
                  type="text"
                  placeholder="Service type (e.g., Accommodation)"
                  value={newServiceType}
                  onChange={(e) => setNewServiceType(e.target.value)}
                  className="h-9 text-sm"
                />
                <Button
                  onClick={handleAddService}
                  className="w-full bg-purple-600 hover:bg-purple-700 text-white h-9 text-sm"
                >
                  <Plus className="w-3.5 h-3.5 mr-1.5" />
                  Add Custom Service
                </Button>
              </div>
            </div>
          </div>
          <DialogFooter className="mt-2">
            <Button variant="outline" onClick={() => setEditServicesDialog(false)} className="h-9 text-sm">
              Done
            </Button>
          </DialogFooter>
        </DialogContent>
      </Dialog>
    </div>
  );
}


